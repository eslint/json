{
  "name": "@eslint/json",
  "version": "1.0.0",
  "description": "JSON linting plugin for ESLint",
  "author": "Nicholas C. Zakas",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "!(*.js)": "prettier --write --ignore-unknown",
    "{src/rules/*.js,tools/update-rules-docs.js,README.md}": [
      "npm run build:update-rules-docs",
      "git add README.md"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eslint/json.git"
  },
  "bugs": {
    "url": "https://github.com/eslint/json/issues"
  },
  "homepage": "https://github.com/eslint/json#readme",
  "scripts": {
    "build": "npm run build:rules && npm run build:types && npm run build:update-rules-docs",
    "build:rules": "node tools/build-rules.js",
    "build:types": "tsc",
    "build:update-rules-docs": "node tools/update-rules-docs.js",
    "prepare": "npm run build",
    "pretest": "npm run build",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "lint:types": "attw --pack --profile esm-only",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "test": "mocha \"tests/**/*.test.js\"",
    "test:coverage": "c8 npm test",
    "test:jsr": "npx -y jsr@latest publish --dry-run",
    "test:types": "tsc -p tests/types/tsconfig.json"
  },
  "keywords": [
    "eslint",
    "eslint-plugin",
    "eslintplugin",
    "json",
    "linting"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@eslint/core": "^1.0.1",
    "@eslint/plugin-kit": "^0.5.1",
    "@humanwhocodes/momoa": "^3.3.10",
    "natural-compare": "^1.4.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "c8": "^10.1.3",
    "dedent": "^1.5.3",
    "eslint": "^9.39.2",
    "eslint-config-eslint": "^13.0.0",
    "eslint-plugin-eslint-plugin": "^6.3.2",
    "globals": "^17.0.0",
    "lint-staged": "^16.0.0",
    "mdast-util-from-markdown": "^2.0.2",
    "mocha": "^11.3.0",
    "prettier": "3.8.1",
    "typescript": "^5.9.2",
    "yorkie": "^2.0.0"
  },
  "engines": {
    "node": "^20.19.0 || ^22.13.0 || >=24"
  }
}
